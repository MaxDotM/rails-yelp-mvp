<div class="container mt-2">
  <ul class="list-group">
    <li class="list-group-item"> <%= @restaurant.name %></li>
    <li class="list-group-item"> <%= @restaurant.category %></li>
    <li class="list-group-item"> <%= @restaurant.phone_number %></li>
    <li class="list-group-item"> <%= @restaurant.address %></li>
  </ul>
  <h3>Reviews:</h3>
<ul>
  <% @restaurant.reviews.each do |restaurant| %>
  <li> <%= restaurant.content %></li>
  <% end %>
</ul>
  <%= link_to "Back", restaurants_path, class: "btn btn-primary"%>
  <%= link_to "Write a Review", new_restaurant_review_path(@restaurant),
      class: "btn btn-primary"%>
</div>
